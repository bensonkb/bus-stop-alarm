<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/SelectedBusArea"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Route:  " android:id="@+id/Route" android:textSize="9pt"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="9pt" android:id="@+id/RouteNumberSelected"></TextView>
</LinearLayout>
	

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BusStopArea"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop: " android:id="@+id/StopView" android:textSize="9pt"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="7pt" android:id="@+id/BusStopSelected"></TextView>
</LinearLayout><CheckBox android:id="@+id/VibrateCheckbox" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="Vibrate" android:layout_marginTop="20px"/>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/ringtone"
		android:textSize="10pt" />
	<Spinner android:id="@+id/RingtoneSelector" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:prompt="@string/ringtone" />
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ProximityTextArea" android:layout_marginTop="10px"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Proximity:  " android:textSize="10pt"></TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ProximityNumber" android:text="456" android:textSize="8.5pt"></TextView>
</LinearLayout>
	
	<LinearLayout android:id="@+id/ProximityBarArea" 
		android:gravity="fill_vertical" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="0"
			android:textSize="8pt" 
			android:padding="3px" android:id="@+id/MinProximityValue"/>
		<SeekBar android:id="@+id/ProximityBar" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:minWidth="240px"/>
		
	
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="8pt" android:text="1000" android:padding="3px" android:id="@+id/MaxProximityValue"></TextView>
</LinearLayout>
	
	<Spinner android:id="@+id/ProximityUnits" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:prompt="@string/proximity"/>
		
	<LinearLayout android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:gravity="bottom" android:id="@+id/ButtonsArea">
		
		<Button android:text="Cancel" 
			android:id="@+id/CancelButton"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<Button android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:id="@+id/SaveDestination" android:text="Save Destination"/>
		<Button android:text="OK" 
			android:id="@+id/OKButton"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
			
	</LinearLayout>






</LinearLayout>